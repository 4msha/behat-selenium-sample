{
  "require": {
      "behat/behat": "^v3.10.0",
	    "php-webdriver/webdriver": "^1.12.0",
      "symfony/yaml": "*"
  },
  "config": {
      "bin-dir": "bin/"
  },
  "scripts": {
    "test": "composer single  && composer parallel",
    "single": "./bin/behat --config=config/single.conf.yml",
    "parallel": "CONFIG_FILE=config/parallel.conf.yml /usr/bin/env php lib/parallel.php"
  },
  "autoload": {
    "classmap": ["lib/"]
  }
}
